<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.OrderPlaced">

    <RelativeLayout
        android:id="@+id/orderSuccessfullyPlaced"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2">

        <ImageView
            android:id="@+id/imageViewOrderPlaced"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewOrderPlaced"
            android:layout_centerHorizontal="true"
            android:text="Your order has been successfully placed"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150dp"
            android:background="#FF0000">

            <Button
                android:id="@+id/buttonOkay"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#E53C0B"
                android:text="OK"

                android:textColor="#fff"
                android:textSize="20sp"

                />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>